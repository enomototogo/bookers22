<div class="messege">
  <p id="notice"> <!--サクセスメッセージ-->
    <%= notice %>
  </p>
</div>

<body>
  <div class="container">
    <div class = "row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <%= render 'books/new_book', book: @book %>
      </div>
      <div class = "col-md-8 offset-md-1">
        <header>
          <h1>Users</h1>
        </header>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
